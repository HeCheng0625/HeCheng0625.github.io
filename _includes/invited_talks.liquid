<div class="invited-talks">
  {% if site.invited_talks != blank %}
    <div class="table-responsive">
      <table class="table table-sm table-borderless">
        {% if include.limit %}
          {% assign talks = site.invited_talks | reverse | slice: 0, 3 %}
        {% else %}
          {% assign talks = site.invited_talks | reverse %}
        {% endif %}
        {% for item in talks %}
          <tr>
            <!-- 左侧：机构名称 -->
            <th scope="row" style="width: 20%; color: var(--global-theme-color);">
              {{ item.venue }}
            </th>
            
            <!-- 右侧内容 -->
            <td>
              <!-- title、location、date_range 并列显示 -->
              <div style="margin-bottom: 0.5rem;">
                <strong>{{ item.title }}</strong>
              </div>
              <div style="margin-bottom: 0.5rem;">
                <span><i class="fas fa-map-marker-alt" style="margin-right: 0.3rem;"></i>{{ item.location }}</span>
                <span style="margin: 0 0.5rem;">·</span>
                <span>{{ item.date_range }}</span>
              </div>

              <!-- 描述 -->
              {% if item.description %}
                <div style="margin-bottom: 0.5rem;">
                  {{ item.description | markdownify }}
                </div>
              {% endif %}

              <!-- 关键词 -->
              <div>
                {% for keyword in item.keywords %}
                  <span style="font-style: italic; margin-right: 0.75rem;">
                    {{ keyword }}
                  </span>
                {% endfor %}
              </div>
            </td>
          </tr>
        {% endfor %}
      </table>
    </div>
  {% else %}
    <p>No invited talks yet...</p>
  {% endif %}
</div>